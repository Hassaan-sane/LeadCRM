            android:name=".Activities.AddTaskActivity"
            android:parentActivityName=".Activities.AddTaskActivity" />
        <activity
            android:name=".Activities.AddDealsActivity"
            android:parentActivityName=".Activities.AddDealsActivity" />
        <activity
            android:name=".Activities.DetailLeadActivity"
