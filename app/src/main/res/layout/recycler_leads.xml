<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_design"
    android:elevation="20dp">

    <TextView
        android:id="@+id/tv_name_leadrecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Name"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_email_leadrecycler"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_name_leadrecycler"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="30dp"
        android:textSize="14sp"
        android:textColor="#000"
        android:text="email@gmail.com"
        android:textStyle="normal"/>

    <ImageView
        android:id="@+id/iv_image_leadrecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_email_leadrecycler"
        android:layout_alignParentEnd="true"
        android:paddingRight="20dp"
        android:paddingBottom="30dp"
        app:srcCompat="@drawable/ic_menu_contacts" />

</RelativeLayout>
